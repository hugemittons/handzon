<h4>Add Your Review</h4>

<% @review.errors.full_messages.each do |error| %>
  <p><% error %><p>
<% end %>

<%= simple_form_for [@massage, @review] do |f| %>
  <%= f.input :rating, label: false , as: :radio_buttons, item_wrapper_class: 'review-radio-inline',
  item_wrapper_tag: :div, collection: [1, 2, 3, 4, 5] %>
  <%= f.input :content, label: false, placeholder: 'leave a comment' %>
  <%= f.submit "add review", class: "btn btn-primary" %>
<% end %>
