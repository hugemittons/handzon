<div class="massage-editor">
<hr>
  <div class="row">
  <h4 class="text-center">My Massages</h4>
  <%  current_user.massages.each do |massage|%>
    <div class="col-xs-8">
      <%= massage.tagline%>
    </div>
    <div class="col-xs-2">
      <%=link_to 'edit', edit_massage_path(massage) %>
    </div>
    <div class="col-xs-2">
      <%= link_to 'X', massage_path(massage), method: :delete %>
    </div>
  <% end%>
  </div>
  <h4 class="text-center"><%= link_to 'new massage', new_massage_path %></h4>
</div>
