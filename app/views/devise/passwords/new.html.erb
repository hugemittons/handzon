<div class="sign-in-wrapper" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.4) 50%), url(<%= image_path "user-background.png" %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-offset-3">
        <h2 class="text-center", style="color:white">Forgot your password?</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group-user">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "input-field-user"%>
          </div>

          <div class="actions text-center">
            <%= f.submit "Reset Password", class: "btn btn-primary"%>
          </div>
        <% end %>

        <div class="form-group-user text-center">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>

