<div class="sign-in-wrapper" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.4) 50%), url(<%= image_path "user-background.png" %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-offset-3">
        <h2 class="text-center", style="color:white">Register on Handzon</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
           <div class="form-group-user">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, class: "input-field-user" %>
          </div>

           <div class="form-group-user">
            <%= f.label "Add profile picture:" %></h3>
            <%= f.file_field :photo %>
            <%= f.hidden_field  :photo_cache, as: :hidden %>
          </div>

           <div class="form-group-user">
             <%= f.check_box :masseuse, {}, true %>
             <%= f.label :masseuse, "I'm masseuse!" %>
           </div>

           <div class="form-group-user">
             <%= f.label "If you're a masseuse, type in your skills"%> <br />
             <%= f.text_field :skill, class: "input-field-user"%>
           </div>

          <div class="form-group-user">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "input-field-user"%>
          </div>

          <div class="form-group-user">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "input-field-user" %>
          </div>

          <div class="form-group-user">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field-user" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "Sign up", class: "btn btn-primary"%>
          </div>
        <% end %>

        <div class="form-group-user text-center">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>

